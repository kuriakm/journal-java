<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.journalfrontend.PrimaryScreenController">
   <children>
      <Label text="Welcome to your Journal!" styleClass="title"/>
      <Button fx:id="returningJournal" text="Open an Existing Journal" onAction="#openExistingJournal" styleClass="primary-button"/>
      <Button fx:id="newJournal" text="Create a New Journal" onAction="#createNewJournal" styleClass="primary-button"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>